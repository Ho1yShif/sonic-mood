# Music Recommendation App - Environment Variables Configuration
# Copy this file to .env for local development

# Backend API URL
# In development, this should point to your local backend server
# In production, this should point to your deployed backend on Render
VITE_API_URL=http://localhost:3000/api

# Use mock data instead of real API calls
# Set to 'true' for development without a backend
# Set to 'false' when connecting to the real backend API
VITE_USE_MOCK_DATA=true
